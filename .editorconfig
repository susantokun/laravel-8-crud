root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.php]
indent_style = tab
indent_size = 4

[*.blade.php]
indent_style = tab
indent_size = 2

[*.{js,jsx}]
indent_style = tab
indent_size = 2

[*.html]
indent_style = tab
indent_size = 2
